{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true
  },
  "exclude": [
    "./tests/",
    "/node_modules/",
    "./dist/",
    "./distProduction/",
    "./distStatic/"
  ]
}